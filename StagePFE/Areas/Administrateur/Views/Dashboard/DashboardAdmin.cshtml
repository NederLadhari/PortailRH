@model StagePFE.Areas.Administrateur.Models.DashboardViewModel
@{
    ViewBag.Title = "DashboardAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.CurrentController = "Dashboard";
}

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>

<script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>

<script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<div class="content">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="header text-center">



                <div class="row">
                    <div class="col-4">
                        <div class="card card-stats">
                            <div class="card-header card-header-warning card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">face</i>
                                </div>
                                <p class="card-category text-dark font-weight-bold">Employés</p>
                                <h3 class="card-title">@Model.Employes.Count()</h3>
                            </div>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons text-danger">parse</i>
                                    Nombre des employés
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card card-stats">
                            <div class="card-header card-header-danger card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">supervisor_account</i>
                                </div>
                                <p class="card-category text-dark font-weight-bold">Equipes</p>
                                <h3 class="card-title">@Model.Equipe.Count()</h3>
                            </div>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons">parse</i> Nombre d'équipes
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card card-stats">
                            <div class="card-header card-header-success card-header-icon">
                                <div class="card-icon">
                                    <i class="material-icons">library_books</i>
                                </div>
                                <p class="card-category text-dark font-weight-bold">Roles</p>
                                <h3 class="card-title">4</h3>
                            </div>
                            <div class="card-footer">
                                <div class="stats">
                                    <i class="material-icons">parse</i> Nombre de roles
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-8" >
                        <div class="card card-stats" >
                            <div class="card-header card-header-warning card-header-icon">
                                
                                <p class="card-category text-dark font-weight-bold text-center">Nombre d'employés recruté par année</p>
                                <div class="card card-stats">
                                    <div id="bar-example"></div>
                                </div>
                            </div>
                        </div>
                        </div>
                    <div class="col-4">

                        <div class="card card-stats">
                            <div class="card-header card-header-warning card-header-icon">

                                <p class="card-category text-dark font-weight-bold text-center">Nombre d'employés par sexe</p>
                                <div class="card card-stats">
                                    <div style="font-style:normal"
                                         id="donut-example"></div>
                                </div>
                                </div>
                            </div>
                            </div>

                        </div>
                        

                    </div>

                    </div>
                </div>
            </div>
    @section Scripts
        {
       
        
       
        <script>

            Morris.Bar({
                element: 'bar-example',
                data: [
                    { y: '2007', a: 3 },
                    { y: '2008', a: 5 },
                    { y: '2009', a: 4},
                    { y: '2010', a: 7},
                    { y: '2011', a: 9},
                    { y: '2012', a: 9},
                    { y: '2013', a: 6 },
                    { y: '2014', a: 15 },
                    { y: '2015', a: 10 },
                    { y: '2016', a: 16 },
                    { y: '2017', a: 15 },
                    { y: '2018', a: 17 }
                ],
                xkey: 'y',
                ykeys: ['a'],
                labels: ['Series A']
            });
        </script>

        <script>
            var colors_array = ["#9CC4E4", "#F26C4F"];
            Morris.Donut({
    element: 'donut-example',
            colors: colors_array,
                data: [
                    { label: "Homme", value: @Model.Homme.Count() },
                    { label: "Femme", value: @Model.Femme.Count() },
                    
                ]
            });</script>
        }
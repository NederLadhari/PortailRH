@model StagePFE.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.CurrentController = "Register";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-md-8 mr-auto ml-auto">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card card-wizard" data-color="red" id="wizardProfile">
                    <form action="/Administrateur/Account/Register" method="Post">
                        <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                        <div class="card-header text-center">
                            <h3 class="card-title">
                                Ajouter un employé
                            </h3>

                            <h5 class="card-description"></h5>
                        </div>
                        <div class="wizard-navigation">
                            <ul class="nav nav-pills">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#about" data-toggle="tab" role="tab">
                                        Compte
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#account" data-toggle="tab" role="tab">
                                        Role
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#address" data-toggle="tab" role="tab">
                                        Informations
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="about">
                                    <h5 class="info-text">Création d'un compte</h5>
                                    <div class="row justify-content-center">
                                        <div class="col-sm-4">
                                            <div class="picture-container">
                                                <div class="picture">
                                                    <img src="~/New/assets/img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="" />
                                                    <input type="file" id="wizard-picture">
                                                </div>
                                                <h6 class="description">Choisir une image</h6>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="input-group form-control-lg">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">face</i>
                                                    </span>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Nom (required)</label>
                                                    <input type="text" class="form-control" id="exampleInput1" name="firstname" required>
                                                </div>
                                            </div>
                                            <div class="input-group form-control-lg">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">record_voice_over</i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInput11" class="bmd-label-floating">Prénom</label>
                                                    <input type="text" class="form-control" id="exampleInput2" name="secondname" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-10 mt-3">
                                            <div class="input-group form-control-lg">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">email</i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Email (required)</label>
                                                    <input type="text" class="form-control" id="exampleInput3" name="email" required>

                                                </div>
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">https</i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="examplepass" class="bmd-label-floating">Mot de passe (required)</label>
                                                    <input type="password" class="form-control" id="exampleInput4" name="passe" required>
                                                </div>
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">https</i>
                                                    </span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="examplepass" class="bmd-label-floating">Confirmer le mot de passe (required)</label>
                                                    <input type="password" class="form-control" id="exampleInput5" name="confirm" required>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="account">
                                    <h5 class="info-text"> Affectectation des roles </h5>
                                    <div class="row justify-content-center">
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="jobb" value="Administrateur">
                                                        <div class="icon">
                                                            <i class="fa fa-pencil"></i>
                                                        </div>
                                                        <h6>Administrateur</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="jobb" value="RH">
                                                        <div class="icon">
                                                            <i class="fa fa-pencil"></i>
                                                        </div>
                                                        <h6>RH</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="jobb" value="ChefProjet">
                                                        <div class="icon">
                                                            <i class="fa fa-terminal"></i>
                                                        </div>
                                                        <h6>Chef de projet</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice " data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="jobb" value="Ingenieur">
                                                        <div class="icon">
                                                            <i class="fa fa-terminal"></i>
                                                        </div>
                                                        <h6>Ingénieur</h6>
                                                    </div>
                                                    </div>
                                                
                                                    
                                                    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="address">
                                    <div class="row justify-content-center">
                                        <div class="col-sm-12">
                                            <h5 class="info-text"> Information personnelles : </h5>
                                        </div>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                <label for="examplepass" class="bmd-label-floating">Adresse</label>
                                                <input type="text" class="form-control" name="adresse" >
                                            </div>
                                            <div class="form-group">
                                                <label for="examplepass" class="bmd-label-floating">Telephone</label>
                                                <input type="text" class="form-control" name="telephone" >
                                            </div>
                                            <div class="form-group">
                                                <label for="examplepas" class="bmd-label-floating">Date de naissance</label>
                                                <input type="text" class="form-control datepicker" value="" name="naissance">
                                            </div>
                                            <div class="form-group">
                                                <label for="examplepasss" class="bmd-label-floating">Date de recrutement</label>
                                                <input type="text" class="form-control datepicker" value="" name="recrutement">
                                            </div>
                                            <div class="form-group">
                                                <label for="examplepass" class="bmd-label-floating">Cin</label>
                                                <input type="number" class="form-control" name="cin">
                                            </div>
                                            <div class="col-sm-12 mb-md-4">
                                                <select name="sexe" class="selectpicker" data-style="btn btn-primary btn-round" title="Single Select" data-size="7">
                                                    <option disabled selected>Sexe</option>
                                                    <option value="Femme">Femme </option>
                                                    <option value="Homme">Homme</option>
                                                </select>
                                            </div>
                                        </div>





                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="mr-auto">
                                <input type="button" class="btn btn-previous btn-fill btn-default btn-wd disabled" name="previous" value="Précédent">
                            </div>
                            <div class="ml-auto">
                                <input type="button" class="btn btn-next btn-fill btn-danger btn-wd" name="next" value="Suivant">
                                <input type="submit" class="btn btn-finish btn-fill btn-danger btn-wd" name="finish" value="Terminer" style="display: none;">
                            </div>
                            <div class="clearfix"></div>
                        </div>



                    </form>

                </div>
            </div>
            <!-- wizard container -->
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


<script type="text/javascript">

$(document).ready(function(){

  //init DateTimePickers
  md.initFormExtendedDatetimepickers();


  // Sliders Init
  md.initSliders();

});

</script>
}
